@model WebPageBookCate.Models.Book

@{
    ViewData["Title"] = "Details";
}
@inject LanguageService language
<!DOCTYPE html>
<html lang="en">
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @language.Getkey( @Html.DisplayNameFor(model => model.Title))
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @language.Getkey( @Html.DisplayNameFor(model => model.Description))
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @language.Getkey( @Html.DisplayNameFor(model => model.DatePublished))
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePublished)
        </dd>
        <dt class="col-sm-2">
            @language.Getkey( @Html.DisplayNameFor(model => model.Author))
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @language.Getkey(  @Html.DisplayNameFor(model => model.ImageUrl))
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@language.Getkey("Edit")</a>
    <a asp-action="Index" class="btn btn-light"><i class="fa-solid fa-backward"></i>@language.Getkey("Back To List")</a>
</div>
